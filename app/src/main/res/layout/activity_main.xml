<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#16171B">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:gravity="bottom">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4E505F"
                android:text="C"
                app:cornerRadius="60px"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4E505F"
                android:text="+/-"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4E505F"
                android:text="%"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4B5EFC"
                android:text="/"
                app:cornerRadius="60px" />

            />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:gravity="bottom">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="7"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="8"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="9"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4B5EFC"
                android:text="X"
                app:cornerRadius="60px" />

            />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:gravity="bottom">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="4"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="5"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="6"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4B5EFC"
                android:text="-"
                app:cornerRadius="60px" />

            />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:gravity="bottom">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="4"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="5"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="6"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4B5EFC"
                android:text="-"
                app:cornerRadius="60px" />

            />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:gravity="bottom">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="."
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="0"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2E2F38"
                android:text="X"
                app:cornerRadius="60px" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4B5EFC"
                android:text="="
                app:cornerRadius="60px" />

            />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/textView"
        android:layout_width="408dp"
        android:layout_height="106dp"
        android:fontFamily="@font/worcsans"
        android:gravity="bottom|right"
        android:text="1,258.2"
        android:textColor="@color/white"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:background="@drawable/cameraspace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="46dp"
        android:layout_height="0dp"
        android:text="9:41"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6,291 / 5"
        android:textColor="#595757"
        android:gravity="bottom"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>